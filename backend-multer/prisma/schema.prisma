// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  username     String  @id
  email        String  @unique // [Wajib] Tambahkan ini
  password     String
  refreshToken String?
  
  tasks        Task[] 
  categories   Category[]

  @@map("users")
}

// [Baru] Model Category untuk Requirement No. 6
model Category {
  id        String   @id @default(uuid())
  name      String
  
  // Relasi: Kategori milik user tertentu
  user      User     @relation(fields: [username], references: [username], onDelete: Cascade)
  username  String
  
  tasks     Task[]

  @@unique([name, username]) // Mencegah duplikasi nama kategori per user
  @@map("categories")
}

model Task {
  id          String   @id @default(uuid())
  title       String   
  description String?
  priority    String   // Low, Medium, High
  dueDate     DateTime 
  isCompleted Boolean  @default(false)
  
  // [Fix Error Anda] Menambahkan field isPublic
  isPublic    Boolean  @default(false) 
  
  // [Penyesuaian] Ubah filePath jadi fileUrl agar sesuai Service
  fileUrl     String?  
  
  // Relasi ke User
  authorId    String
  author      User     @relation(fields: [authorId], references: [username], onDelete: Cascade)
  
  // [Penyesuaian] Relasi ke Category (bukan sekadar string)
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("tasks")
}