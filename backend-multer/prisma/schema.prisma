generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  username     String  @id
  password     String
  refreshToken String?
  tasks        Task[]  // Ganti posts jadi tasks
  
  @@map("users")
}

model Task {
  id          String   @id @default(uuid())
  title       String   // [Baru] Judul task
  description String?  // Ganti content jadi description (opsional)
  priority    String   // [Baru] Low, Medium, High
  dueDate     DateTime // [Baru] Tenggat waktu
  category    String?  // [Baru] Kategori/Tag
  isCompleted Boolean  @default(false) // [Baru] Status selesai/belum
  
  filePath    String?  // Ganti imagePath jadi filePath (untuk attachment)
  
  authorId    String
  author      User     @relation(fields: [authorId], references: [username], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("tasks")
}